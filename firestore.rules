rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /{document=**} {
      // Capamos todos los accesos
      allow read, write: if false
    }

    // Boards: Solo el dueño puede ver y editar
    match /boards/{board} {
      allow read, write: if request.auth.uid == board
    }

    // Columns: Solo el dueño del tablero puede ver, editar y eliminar
    match /columns/{column} {
      allow read, write, delete: if request.auth.uid == resource.data.board
    }

    // Cards: Solo el dueño del tablero puede ver, editar y eliminar
    match /cards/{card} {
      allow read, write, delete: if request.auth.uid == resource.data.board
    }
  }
}